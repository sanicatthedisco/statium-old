{
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"],
  "files": ["src/shared/Utils/custom.d.ts"],
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "typeRoots": ["declarations.d.ts"],
    "baseUrl": "./",
    "moduleResolution":"NodeNext",

    "inlineSourceMap": true,

    "outDir": "./dist/server",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
}
